{
  "version": 1,
  "locale": {
    "source": "en",
    "targets": ["es", "fr", "de", "hi", "ja", "ko", "zh"]
  },
  "buckets": {
    "json": {
      "include": ["src/locales/en/*.json"]
    },
    "markdown": {
      "include": ["src/content/posts/[locale]/*.mdx"]
    }
  },
  "$schema": "https://lingo.dev/schema/i18n.json"
}
